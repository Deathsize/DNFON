* {
  margin: 0 auto;
  padding: 0;
}

table {
  width: 100%;
  height: 35px;
  margin: 0;
  padding: 0;
}

table #id_header {
  background-color: red;
  padding-left: 10px;
  color: white;
  font-weight: bold;
  font-size: 13px;
}

.id_body {
  text-align: center;
}

.id_footer {
  text-align: center;
}
.id_check {
  background: #EEEEEE;
  padding-top: 15px;
  padding-bottom: 15px;
}

.id_check span {
  color: red;
}

.id_check span p {
  font-size: 14px;
  margin-top: 10px;
  margin-bottom: 10px;
}

#check {
  vertical-align: middle;
}
