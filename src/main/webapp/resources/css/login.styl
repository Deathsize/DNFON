* {
  margin: 0 auto;
  padding: 0;
}

#wrap {
  margin: 0 auto;
  width: 100%;
  display: flex;
  flex-flow: column wrap;
}

.headline {
    background: url(/resources/images/logo/logo.png) no-repeat center;
    width: 480px;
    height: 191px;
    display: block;
}

.memberlogin {
  width: 480px;
}
.loginWrap input {
  width: 100%;
  height: 40px;
  border: 1px solid #A8AAAF;
  border-radius: 3px;
}

.loginWrap button {
  width: 100%;
}

.userMenu {
  display: flex;
  margin-top: 20px;
}

.userMenu a {
  color: black;
}
.userMenu #join {
  text-align: left;
}

fieldset {
  border: 0;
}
.userMenu #id_pw {
  text-align: right;
}

.footer {
  margin-top: 20px;
  width: 100%;
  text-align: center;
  border-top: 1px solid #DBDBDB;
  border-bottom: 1px solid #DBDBDB;
  background-color: #EBEBEB;
  padding-top: 10px;
  padding-bottom: 10px;
}
